generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  username String
  email String @unique
  password String
  role String @default("USER")
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order Order[]
  phycoOrders PhycoOrder[] @relation("PhycoOrders")
  phycoProducts PhycoProduct[] @relation("PhycoProductAuthor")
  cart PhycoCart?
  wishlist PhycoWishlist?
}

model Category {
  id Int @id @default(autoincrement())
  name String
  slug String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  products Products[]
}

model Products {
  id Int @id @default(autoincrement())
  name String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  categoryId Int
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  colors ProductColor[]
}

model ProductColor {
  id Int @id @default(autoincrement())
  productId Int
  color String
  colorCode String @default("#000000")

  product Products @relation(fields: [productId], references: [id], onDelete: Cascade)

  images ProductColorImage[]
  variants ProductColorVariants[]
}

model ProductColorImage {
  id Int @id @default(autoincrement())
  colorId Int
  imageUrl String
  order Int

  color ProductColor @relation(fields: [colorId], references: [id], onDelete: Cascade)
}

model ProductColorVariants {
  id Int @id @default(autoincrement())
  colorId Int
  price Float
  size String
  stock Int

  color ProductColor @relation(fields: [colorId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
}

model Order {
  id Int @id @default(autoincrement())
  userId Int
  status String @default("PENDING") // PENDING, CONFIRMED, SHIPPED, DELIVERED, CANCELLED
  totalAmount Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  items OrderItem[]
  address Address?
}

model OrderItem {
  id Int @id @default(autoincrement())
  orderId Int
  productVariantId Int
  quantity Int
  price Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variant ProductColorVariants @relation(fields: [productVariantId], references: [id], onDelete: Cascade)
}

model Address {
  id Int @id @default(autoincrement())
  orderId Int @unique
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

// ============================================
// PHYCO PRODUCT SYSTEM - Independent System
// ============================================

model PhycoCategory {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  description String?
  
  // Self-referencing for nested categories
  parentId    Int?
  parent      PhycoCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    PhycoCategory[] @relation("CategoryHierarchy")
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isActive    Boolean   @default(true)
  isDeleted   Boolean   @default(false)
  
  products    PhycoProduct[]
}

model PhycoProduct {
  id                Int       @id @default(autoincrement())
  
  // 1. Core fields
  sku               String?   @unique
  name              String
  slug              String    @unique
  status            String    @default("publish") // publish, draft, pending, private
  type              String    @default("simple")  // simple, variable, grouped, external
  shortDescription  String?
  description       String?
  authorId          Int?
  
  // 2. Category
  categoryId        Int
  
  // 3. Pricing & Stock (for simple products)
  price             Float?
  regularPrice      Float?
  salePrice         Float?
  saleStart         DateTime?
  saleEnd           DateTime?
  stockStatus       String    @default("instock") // instock, outofstock, onbackorder
  stockQuantity     Int?
  manageStock       Boolean   @default(false)
  backordersAllowed Boolean   @default(false)
  
  // 4. Media
  featuredImageUrl  String?
  imageAlt          String?
  
  // 5. Shipping & Dimensions
  weight            String?
  length            Float?
  width             Float?
  height            Float?
  shippingClassId   Int?
  
  // 6. Tax & Special
  taxStatus         String?   @default("taxable") // taxable, shipping, none
  taxClass          String?
  virtual           Boolean   @default(false)
  downloadable      Boolean   @default(false)
  purchaseNote      String?
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  isActive          Boolean   @default(true)
  isDeleted         Boolean   @default(false)
  
  // Relations
  category          PhycoCategory           @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  author            User?                   @relation("PhycoProductAuthor", fields: [authorId], references: [id])
  images            PhycoProductImage[]
  tags              PhycoProductTag[]
  attributes        PhycoProductAttribute[]
  variations        PhycoProductVariation[]
  downloads         PhycoProductDownload[]
  cartItems         PhycoCartItem[]         @relation("CartItems")
  wishlistItems     PhycoWishlistItem[]     @relation("WishlistItems")
}

model PhycoProductVariation {
  id                Int      @id @default(autoincrement())
  productId         Int
  sku               String?  @unique
  
  // Pricing
  price             Float
  regularPrice      Float?
  salePrice         Float?
  saleStart         DateTime?
  saleEnd           DateTime?
  
  // Stock
  stockStatus       String   @default("instock")
  stockQuantity     Int?
  manageStock       Boolean  @default(false)
  backordersAllowed Boolean  @default(false)
  
  // Attributes (JSON)
  // Example: {"Màu sắc": "Xanh", "Kích thước": "500ml", "Combo": "Bộ 1-1"}
  attributes        Json
  
  // Media
  imageUrl          String?
  
  // Shipping
  weight            String?
  length            Float?
  width             Float?
  height            Float?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  product           PhycoProduct     @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems        PhycoOrderItem[]
}

model PhycoProductImage {
  id         Int      @id @default(autoincrement())
  productId  Int
  imageUrl   String
  imageAlt   String?
  order      Int      @default(0)
  
  product    PhycoProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model PhycoProductTag {
  id         Int      @id @default(autoincrement())
  productId  Int
  name       String
  slug       String
  
  product    PhycoProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([productId, slug])
}

model PhycoProductAttribute {
  id         Int      @id @default(autoincrement())
  productId  Int
  name       String   // "Màu sắc", "Kích thước"
  slug       String
  visible    Boolean  @default(true)
  variation  Boolean  @default(false)
  
  // Options: ["S", "M", "L"]
  options    Json
  
  product    PhycoProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([productId, slug])
}

model PhycoProductDownload {
  id         Int      @id @default(autoincrement())
  productId  Int
  name       String
  fileUrl    String
  
  product    PhycoProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model PhycoOrder {
  id          Int       @id @default(autoincrement())
  userId      Int
  orderCode   String    @unique
  status      String    @default("PENDING")
  totalAmount Float
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isActive    Boolean   @default(true)
  isDeleted   Boolean   @default(false)
  
  user        User              @relation("PhycoOrders", fields: [userId], references: [id], onDelete: Cascade)
  items       PhycoOrderItem[]
  address     PhycoAddress?
}

model PhycoOrderItem {
  id         Int      @id @default(autoincrement())
  orderId    Int
  variationId Int
  quantity   Int
  price      Float
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  order      PhycoOrder           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variation  PhycoProductVariation @relation(fields: [variationId], references: [id], onDelete: Cascade)
}

model PhycoAddress {
  id          Int      @id @default(autoincrement())
  orderId     Int      @unique
  fullName    String
  phone       String
  address     String
  ward        String?
  district    String?
  city        String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  order       PhycoOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

// ============================================
// CART & WISHLIST SYSTEM
// ============================================

model PhycoCart {
  id          Int      @id @default(autoincrement())
  userId      Int?     @unique // Null for guest users
  sessionId   String?  @unique // For guest users
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       PhycoCartItem[]
  
  @@index([userId])
  @@index([sessionId])
}

model PhycoCartItem {
  id          Int      @id @default(autoincrement())
  cartId      Int
  productId   Int
  quantity    Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  cart        PhycoCart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product     PhycoProduct @relation("CartItems", fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([cartId, productId])
}

model PhycoWishlist {
  id          Int      @id @default(autoincrement())
  userId      Int?     @unique
  sessionId   String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       PhycoWishlistItem[]
  
  @@index([userId])
  @@index([sessionId])
}

model PhycoWishlistItem {
  id          Int      @id @default(autoincrement())
  wishlistId  Int
  productId   Int
  createdAt   DateTime @default(now())
  
  wishlist    PhycoWishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  product     PhycoProduct  @relation("WishlistItems", fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([wishlistId, productId])
}
